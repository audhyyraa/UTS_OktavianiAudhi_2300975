<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles.css">
    <title>Data Harga Jual</title>
</head>
<body>
    <header>Data Harga Jual</header>
    <div class="container">
        <h2>Daftar Harga Jual</h2>
        <form action="/prices/add" method="POST">
            <label for="price">Harga</label>
            <input type="number" step="0.01" name="price" required>
            <button type="submit">Tambah Harga</button>
        </form>
        <table>
            <tr>
                <th>ID</th>
                <th>Harga</th>
                <th>Aksi</th>
            </tr>
            <% prices.forEach(price => { %>
                <tr>
                    <td><%= price.id %></td>
                    <td><%= price.price %></td>
                    <td>
                        <a href="/prices/edit/<%= price.id %>">Edit</a> |
                        <a href="/prices/delete/<%= price.id %>">Delete</a>
                    </td>
                </tr>
            <% }) %>
        </table>
    </div>
</body>
</html>
