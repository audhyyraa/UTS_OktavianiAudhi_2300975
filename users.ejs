<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles.css">
    <title>Users</title>
</head>
<body>
    <header>Daftar User</header>
    <div class="container">
        <h2>Users</h2>
        
        <!-- Form untuk menambahkan pengguna baru -->
        <form action="/users/add" method="POST">
            <label for="username">Username</label>
            <input type="text" name="username" required>
            <label for="password">Password</label>
            <input type="password" name="password" required>
            <button type="submit">Tambah User</button>
        </form>

        <!-- Tabel Daftar Pengguna -->
        <table>
            <tr>
                <th>ID</th>
                <th>Username</th>
                <th>Aksi</th>
            </tr>
            <% users.forEach(user => { %>
                <tr>
                    <td><%= user.id %></td>
                    <td><%= user.username %></td>
                    <td>
                        <!-- Form Edit User -->
                        <form action="/users/edit/<%= user.id %>" method="POST" style="display:inline;">
                            <input type="text" name="username" value="<%= user.username %>">
                            <button type="submit">Edit</button>
                        </form>

                        <!-- Form Delete User -->
                        <form action="/users/delete/<%= user.id %>" method="POST" style="display:inline;">
                            <button type="submit">Delete</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </table>

        <!-- Link Kembali ke Halaman Utama -->
        <div style="margin-top: 20px;">
            <a href="/" class="back-link">Kembali ke Halaman Utama</a>
        </div>
    </div>
</body>
</html>
